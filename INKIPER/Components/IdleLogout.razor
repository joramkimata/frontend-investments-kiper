@inject IJSRuntime JSRuntime

@code {
        private const int IdleTimeoutMilliseconds = 5000; // 15 minutes
    private System.Threading.Timer idleTimer;

    protected override async Task OnInitializedAsync()
    {
        await StartTimer();
    }

    private async Task StartTimer()
    {
        if (idleTimer == null)
        {
            idleTimer = new System.Threading.Timer(Logout, null, IdleTimeoutMilliseconds, Timeout.Infinite);
        }
        else
        {
            idleTimer.Change(IdleTimeoutMilliseconds, Timeout.Infinite);
        }
    }

    private void ResetTimer()
    {
        idleTimer.Change(IdleTimeoutMilliseconds, Timeout.Infinite);
    }

    private void Logout(object state)
    {
        
    }

}